---
	import Layout from '../../layouts/Layout.astro'
	import gallerys from '../../lib/gallery.json'
	
	let data = { title: '', description: '' }
	let shape = { wide: '3 / 2', tall: '2 / 3' }
---

<Layout data={data}>

<div class="w-fit mx-auto sm:columns-2 md:columns-3 lg:columns-4 xl:columns-5 2xl:columns-6 text-center">
	{gallerys.map(gallery => {
		return <>
			<div class="mb-4">
				<img class="h-60 object-cover mx-auto" style={`aspect-ratio: ${ gallery['image-shape'] || 'auto' }`} src={gallery['image-source']} alt={gallery['image-detail']} />
				{gallery['image-detail']}
			</div>
		</>
	})}
</div>

</Layout>